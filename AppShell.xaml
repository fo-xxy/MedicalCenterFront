<Shell
    x:Class="MedicalCenter.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:MedicalCenter"
    xmlns:claims="clr-namespace:MedicalCenter.Views.Claims"
    Title="Medical Center"
    FlyoutBehavior="Disabled">

    <TabBar Route="MainTabs" Shell.FlyoutItemIsVisible="False">
        <Tab Title="Claims" Icon="iconoclaim.png">
            <ShellContent ContentTemplate="{DataTemplate claims:ClaimScreen}" Route="ClaimsPage" />
        </Tab>

        <Tab Title="Importar" Icon="iconoexport.png">
            <ShellContent ContentTemplate="{DataTemplate claims:ClaimImportScreen}" Route="ImportPage" />
        </Tab>

        <Tab Title="Exportar" Icon="iconoimport.png">
            <ShellContent ContentTemplate="{DataTemplate claims:ClaimExportScreen}" Route="ExportPage" />
        </Tab>

    </TabBar>

</Shell>