<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicalCenter.Views.Claims.ClaimExportScreen"
             BackgroundColor="White"
             Shell.NavBarIsVisible="False">

    <Grid RowDefinitions="*, 80">

        <ScrollView Grid.Row="0">
            <VerticalStackLayout Spacing="0" Padding="45,80,45,0">

                <Label Text="Centro Medico" 
                       FontSize="24" 
                       FontAttributes="Bold" 
                       HorizontalOptions="Center"
                       TextColor="#111827" 
                       Margin="0,0,0,60"/>

                <Label Text="Exportar Datos" 
                       FontSize="38" 
                       FontAttributes="Bold" 
                       TextColor="#111827" 
                       Margin="0,12,0,48"
                       HorizontalOptions="Center"
                       HorizontalTextAlignment="Center"
                       CharacterSpacing="-1"/>

                <VerticalStackLayout Spacing="28">

                    <Label Text="Se generará un archivo con toda la información de las reclamaciones registradas en el rango seleccionado." 
                           TextColor="#6B7280" 
                           FontSize="14" 
                           HorizontalTextAlignment="Center"
                           Margin="0,10,0,0"/>

                    <Grid Margin="0,15,0,0">
                        <Button Text="Descargar Reporte" 
                                Command="{Binding ExportCommand}"
                                IsEnabled="{Binding IsNotBusy}" 
                                BackgroundColor="#111827" 
                                TextColor="White"
                                HeightRequest="58"
                                FontAttributes="Bold"
                                CornerRadius="8"/>

                        <ActivityIndicator IsRunning="{Binding IsBusy}" 
                                           IsVisible="{Binding IsBusy}"
                                           Color="White" 
                                           HorizontalOptions="Center" 
                                           VerticalOptions="Center" />
                    </Grid>

                </VerticalStackLayout>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>