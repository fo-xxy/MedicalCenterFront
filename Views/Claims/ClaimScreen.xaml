<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicalCenter.Views.Claims.ClaimScreen"
             Title="Gestor de reclmaciones"
             BackgroundColor="#F3F4F6"
             
             Shell.NavBarIsVisible="True">

    <Grid RowDefinitions="Auto, *, Auto">

        <Border Grid.Row="0" BackgroundColor="#111827" Padding="15,12" StrokeThickness="0">
            <Grid ColumnDefinitions="*, 1.4*, 0.8*, 80, 50">

                <HorizontalStackLayout Grid.Column="0" Spacing="4" VerticalOptions="Center">
                    <Label Text="Id" TextColor="#9CA3AF" FontSize="11" FontAttributes="Bold"/>
                    <Label Text="⇅" TextColor="#3B82F6" FontSize="11"/>
                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SortCommand}" CommandParameter="Id" />
                    </HorizontalStackLayout.GestureRecognizers>
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="1" Spacing="4" VerticalOptions="Center">
                    <Label Text="Paciente" TextColor="#9CA3AF" FontSize="11" FontAttributes="Bold"/>
                    <Label Text="⇅" TextColor="#3B82F6" FontSize="11"/>
                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SortCommand}" CommandParameter="Patient" />
                    </HorizontalStackLayout.GestureRecognizers>
                </HorizontalStackLayout>

                <HorizontalStackLayout Grid.Column="2" Spacing="4" VerticalOptions="Center" HorizontalOptions="End">
                    <Label Text="Monto" TextColor="#9CA3AF" FontSize="11" FontAttributes="Bold"/>
                    <Label Text="⇅" TextColor="#3B82F6" FontSize="11"/>
                    <HorizontalStackLayout.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding SortCommand}" CommandParameter="Amount" />
                    </HorizontalStackLayout.GestureRecognizers>
                </HorizontalStackLayout>

                <Label Text="Estado" Grid.Column="3" TextColor="#9CA3AF" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalOptions="Center"/>

                <Label Text="Imp" Grid.Column="4" TextColor="#9CA3AF" FontSize="11" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalOptions="Center"/>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <VerticalStackLayout VerticalOptions="Center" Spacing="20" IsVisible="{Binding IsLoading}">
                <ActivityIndicator IsRunning="True" Color="#3B82F6" HeightRequest="40" WidthRequest="40"/>
                <Label Text="Procesando información..." HorizontalOptions="Center" TextColor="#6B7280" FontSize="13"/>
            </VerticalStackLayout>

            <RefreshView Command="{Binding LoadClaimsCommand}" IsRefreshing="{Binding IsRefreshing}" RefreshColor="#3B82F6">
                <CollectionView x:Name="ClaimsList" ItemsSource="{Binding Claims}" SelectionMode="None">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="15,16" ColumnDefinitions="*, 1.4*, 0.8*, 80, 50">

                                <BoxView Grid.ColumnSpan="5" HeightRequest="0.5" Color="#E5E7EB" VerticalOptions="End" Margin="0,0,0,-16"/>

                                <Label Text="{Binding ClaimNumber}" Grid.Column="0" VerticalOptions="Center" FontSize="11" TextColor="#4B5563" FontFamily="Monospace"/>

                                <Label Text="{Binding PatientName}" Grid.Column="1" VerticalOptions="Center" FontSize="12" FontAttributes="Bold" TextColor="#111827" LineBreakMode="TailTruncation"/>

                                <Label Text="{Binding Amount, StringFormat='${0:N0}'}" Grid.Column="2" VerticalOptions="Center" HorizontalTextAlignment="End" FontSize="12" TextColor="#1F2937" FontAttributes="Bold"/>

                                <Border Grid.Column="3" 
        VerticalOptions="Center" 
        HorizontalOptions="Center"
        Padding="8,2"
        StrokeThickness="0"
        StrokeShape="RoundRectangle 4">

                                    <Border.BackgroundColor>#F3F4F6</Border.BackgroundColor>

                                    <Label x:Name="StatusLabel"
           Text="{Binding Status}" 
           FontSize="10" 
           FontAttributes="Bold" 
           TextTransform="Uppercase"
           TextColor="#374151"/>

                                    <Border.Triggers>
                                        <DataTrigger TargetType="Border" Binding="{Binding Status}" Value="paid">
                                            <Setter Property="BackgroundColor" Value="#DCFCE7"/>
                                            <Setter TargetName="StatusLabel" Property="TextColor" Value="#166534"/>
                                        </DataTrigger>

                                        <DataTrigger TargetType="Border" Binding="{Binding Status}" Value="pending">
                                            <Setter Property="BackgroundColor" Value="#FEF3C7"/>
                                            <Setter TargetName="StatusLabel" Property="TextColor" Value="#92400E"/>
                                        </DataTrigger>

                                        <DataTrigger TargetType="Border" Binding="{Binding Status}" Value="denied">
                                            <Setter Property="BackgroundColor" Value="#FEE2E2"/>
                                            <Setter TargetName="StatusLabel" Property="TextColor" Value="#991B1B"/>
                                        </DataTrigger>
                                    </Border.Triggers>
                                </Border>
                                <Label Text="{Binding IdImport, FallbackValue='N/A'}" Grid.Column="4" FontSize="10" TextColor="#6B7280" HorizontalOptions="Center" VerticalOptions="Center"/>

                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </RefreshView>
        </Grid>

    </Grid>
</ContentPage>