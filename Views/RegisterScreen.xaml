<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MedicalCenter.Views.RegisterScreen"
             BackgroundColor="White"
             NavigationPage.HasNavigationBar="False">

    <Grid RowDefinitions="*, Auto">

        <VerticalStackLayout Grid.Row="0" 
                     Spacing="0" 
                     Padding="45,40,45,0" 
                     VerticalOptions="Start">
            

            <Label Text="Centro Medico" 
                   FontSize="22" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center"
                   TextColor="#111827" 
                   Margin="0,0,0,20"/>

            <Label Text="Registrarse" 
                   FontSize="32" 
                   FontAttributes="Bold" 
                   TextColor="#111827" 
                   Margin="0,0,0,30"
                   HorizontalOptions="Center"
                   CharacterSpacing="-1"/>

            <VerticalStackLayout Spacing="20">
                <VerticalStackLayout Spacing="4">
                    <Label Text="Correo" FontSize="12" FontAttributes="Bold" TextColor="#374151" />
                    <Frame Padding="15,2" HasShadow="False" BackgroundColor="#F9FAFB" BorderColor="#E5E7EB" CornerRadius="8">
                        <Entry Placeholder="Ingresa tu correo" Text="{Binding Email}" HeightRequest="45"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="4">
                    <Label Text="Contraseña" FontSize="12" FontAttributes="Bold" TextColor="#374151" />
                    <Frame Padding="15,2" HasShadow="False" BackgroundColor="#F9FAFB" BorderColor="#E5E7EB" CornerRadius="8">
                        <Entry IsPassword="True" Text="{Binding Password}" Placeholder="••••••••" HeightRequest="45"/>
                    </Frame>
                </VerticalStackLayout>

                <VerticalStackLayout Spacing="4">
                    <Label Text="Rol" FontSize="12" FontAttributes="Bold" TextColor="#374151" />
                    <Frame Padding="15,2" HasShadow="False" BackgroundColor="#F9FAFB" BorderColor="#E5E7EB" CornerRadius="8">
                        <Picker x:Name="RolePicker"
                Title="Selecciona un rol"
                SelectedItem="{Binding Role}"
                HeightRequest="45"
                TextColor="#111827">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>admin</x:String>
                                    <x:String>staff</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </Frame>
                </VerticalStackLayout>

                <Grid Margin="0,10,0,0">
                    <Button Text="Continuar" 
                            Command="{Binding RegisterCommand}"
                            BackgroundColor="#111827" 
                            TextColor="White"
                            HeightRequest="55"
                            FontAttributes="Bold"
                            CornerRadius="8"/>
                    <ActivityIndicator IsRunning="{Binding IsBusy}" Color="White" HorizontalOptions="Center" VerticalOptions="Center" />
                </Grid>
            </VerticalStackLayout>
        </VerticalStackLayout>

        <Grid Grid.Row="1" HeightRequest="80" BackgroundColor="#F9FAFB">
            <Label Text="¿Ya tienes cuenta? Inicia Sesión" 
                   HorizontalOptions="Center" 
                   VerticalOptions="Center" 
                   TextColor="#4F46E5" 
                   FontAttributes="Bold">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding GoBackCommand}"/>
                </Label.GestureRecognizers>
            </Label>
        </Grid>
    </Grid>
    
    
</ContentPage>